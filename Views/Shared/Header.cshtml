<div style="display:flex; justify-content:space-between; align-items:center;">
    <ul style="display:flex; list-style-type: none; margin-left:10px; ">
        <li> 
            <a asp-action="HomePage" asp-controller="Home">Домашняя страница</a> 
        </li>
    </ul>
    @if (User.Identity.Name == null)
    {
    <div style="display:block;">
        <p>авторизация</p>
        <form method="post" asp-action="Autorization" asp-controller="Autorization">
            <div>
                <label>Логин:</label>
                <input type="text" name="login" />
            </div>
            <div>
                <lable>Пароль:</lable>
                <input type="text" name="password" />
            </div>
            <input type="submit" value="Войти" />
        </form>
        <form>
            <input type="submit" asp-action="Registration" asp-controller="Autorization" value="регистрация" />
        </form>
        </div>
    }
    else
    {
        <div>
            <h1>Добро пожаловать @User.Identity.Name</h1>
            <form>
                <input type="submit" value="выход" asp-action="Exit" asp-controller="Autorization" />
            </form>

        </div>
    }
</div>